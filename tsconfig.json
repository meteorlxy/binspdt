{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "axios",
      "nprogress",
      "webpack-env",
      "vuetify"
    ],
    "typeRoots": [
      "client/src/plugins/vue-notification/vue.d.ts",
    ],
    "paths": {
      "@/*": [
        "client/src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "client/src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}
